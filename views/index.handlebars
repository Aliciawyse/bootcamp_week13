<h1>Eat a burger!</h1>

<h2>Burgers that aren't devoured.</h2>
<ul>
    {{#each burgers}}
        <li>
            <p>{{this.id}}. {{burger_name}}</p>
        </li>
    {{/each}}
</ul>



<h2>Burgers that are devoured.</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<form id ="create-form">

    <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="burgerName" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>